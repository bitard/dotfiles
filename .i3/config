# Top bar:
bar {
	mode dock
	position top
   workspace_buttons yes
   status_command ~/.i3/conky
   tray_output none
   colors {
	statusline	#9E5CCA
	background	#414141
     # class               border  backgrd text
        focused_workspace  #CC99FF #808080 #DEDEDE
        active_workspace   #2D2D2D #252525 #DEDEDE
        inactive_workspace #414141 #414141 #6b6b6b
        urgent_workspace   #252525 #252525 #7FA3B7
     }
}

